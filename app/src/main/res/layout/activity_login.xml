<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aidanoleary.personaltrainer.LoginActivity"
    android:background="#ff2d88c4"
    android:clickable="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:id="@+id/loginLogoImage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginEmailField"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:hint="@string/email_field_hint"
                android:singleLine="false"
                android:background="#ffcccccc"
                android:padding="5dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginPasswordField"
                android:layout_below="@+id/loginUsernameField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:password="true"
                android:hint="@string/password_field_hint"
                android:background="#CCCCCC"
                android:layout_marginTop="20dp"
                android:padding="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/loginButton"
                android:layout_below="@+id/loginPasswordField"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#696969"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Don't have an account? Sign up here"
                android:id="@+id/loginSignupText"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textColor="#ffffffff" />

        </LinearLayout>
</RelativeLayout>
